<section id="contact">
  <div class="container-fluid">
    <div class="row text-center content-row">
      <div class="col-md-6 col-sm-12">

        <div class="row" itemscope itemtype="http://schema.org/Optician">    

          <!--Address -->                  
          <div class="col-md-6 col-sm-6 contact-details">
            <h2><span itemprop="name">SSO</span></h2>
            <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                <div itemprop="streetAddress">XX Sun Street</div>
                <div itemprop="addressLocality">Waltham Abbey</div>
                <div><span itemprop="addressRegion">Essex</span> <span itemprop="postalCode">EN9 XXX</span></div>
            </div>
            <div>Tel:<span itemprop="telephone">01992 000 000</span></div>
            <div>Fax:<span itemprop="faxNumber">01992 000 000</span></div>
            <div>E-mail: <span itemprop="email">info@info.com</span></div>
          </div>

          <!--Opening hours -->                  
          <div class="col-md-6 col-sm-6">
            <h3>Opening Times</h3>
            <ul class="opening">
              <li itemprop="openingHours" datetime="Mo 9.00-17.30"><span>Monday</span> <span>09.00 - 17.30</span></li>
              <li itemprop="openingHours" datetime="Tu 9.00-17.30"><span>Tuesday</span> <span>09.00 - 17.30</span></li>
              <li itemprop="openingHours" datetime="We 9.00-17.30"><span>Wednesday</span> <span>09.00 - 17.30</span></li>
              <li itemprop="openingHours" datetime="Th 9-00-17.30"><span>Thursday</span> <span>09.00 - 17.30</span></li>
              <li itemprop="openingHours" datetime="Fr 9.00-17.30"><span>Friday</span> <span>09.00 - 17.30</span></li>
              <li itemprop="openingHours" datetime="Sa 9.00-17.30"><span>Saturday</span> <span>09.00 - 17.30</span></li>
              <li><span>Sunday</span><span>Closed</span></li>
            </ul>
          </div>
        </div>
          
      </div>

      <div class="col-md-6 col-sm-12">
        <form class="form-horizontal">

          <h3>Contact Form</h3>

          <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputName" placeholder="Name">
            </div>
          </div>

          <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="inputEmail" placeholder="Email">
            </div>
          </div>

          <div class="form-group">
            <label for="inputTelephone" class="col-sm-2 control-label">Telephone</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="inputTelephone" placeholder="Telephone">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember me
                </label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Send</button>
            </div>
          </div>

        </form>

      </div>
    </div>
      
    <div class="row text-center">
      <div class="col-lg-12">
        <h1>MAP</h1>
        <hr class="colored">
      </div>
    </div>
  </div>
</section>